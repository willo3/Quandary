<div class="dilemma-section">

  <div class="question-prompt">
    <h5>Dilemma <%= @dilemmas.find_index(@dilemma) + 1 %>/10:</h5>
    <h2>Would you rather...</h2>
  </div>

  <%= link_to  new_game_dilemma_scenario_result_path(@game, @dilemma, @dilemma.scenarios.first),  class: "scenario-card scenario-left" do %>
    <h1><%= @dilemma.scenarios.first.content %></h1>
  <% end %>

  <%= link_to  new_game_dilemma_scenario_result_path(@game, @dilemma, @dilemma.scenarios.second), class: "scenario-card scenario-right" do %>
    <h1><%= @dilemma.scenarios.second.content %></h1>
  <% end %>

  <div class="timer">
    <i class="fa-solid fa-clock"></i>
  </div>

</div>

<%# route = /games/:game_id/dilemmas/:id %>
